<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_bg">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="MY PROFILE"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/plan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Beginner plan"
        android:textColor="#FFF"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:textSize="18sp"
        android:layout_below="@id/textView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@id/plan_text"
        android:layout_alignEnd="@id/plan_text"
        android:layout_below="@id/plan_text" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Change your fitness plan"
        android:layout_below="@id/profileRecyclerView"
        android:textColor="@color/white" />


</RelativeLayout>